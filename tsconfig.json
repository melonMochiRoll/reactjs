{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["ES2020", "DOM"],
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": ".",
    "paths": {
      "@Src/*": ["src/*"],
      "@Components/*": ["src/components/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Pages/*": ["src/pages/*"],
      "@Styles/*": ["src/styles/*"],
      "@Typings/*": ["src/typings/*"],
      "@Utils/*": ["src/utils/*"],
    },
    "typeRoots": ["@typings"],
  }
}